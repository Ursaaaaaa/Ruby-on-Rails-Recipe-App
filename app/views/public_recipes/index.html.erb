<div>
  <div>
    <% if @public_recipes.empty? %>
      <div>
        <h2>No recipes available yet!<h2>
      </div>
    <% else %>
      <div>
      <h1>Public Recipes</h1>
        <% @public_recipes.each do |public_recipe| %>
          <% sum = 0 %>
          <%= link_to recipe_path(public_recipe.id) do %>
            <div>
              <div>
                <h1><%= public_recipe.name%></h1>
              </div>
              <div class="desc">
              <p><%= "By: #{public_recipe.user.name}" %></p>
              <p><%= "Total food items: #{public_recipe.food_recipes.count}" %></p>
              <% public_recipe.food_recipes.each {|food| sum += food.quantity * food.food.price} %>
              <p"><span><%= "Total Price $#{sum}" %></span></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
   </div>
</div>